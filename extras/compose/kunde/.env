TZ=Europe/Berlin
LANG=de_DE.utf8
JAVA_OPTS=--enable-preview

SPRING_OUTPUT_ANSI_ENABLED=ALWAYS
SPRING_PROFILES_ACTIVE=dev
SPRING_PROFILES_DEFAULT=dev
SERVER_TOMCAT_BASEDIR=/tmp

# Image durch Dockerfile statt Buildpacks:
#SPRING_SSL_BUNDLE_PEM_MICROSERVICE_KEYSTORE_PRIVATE-KEY=./private-key.pem
#SPRING_SSL_BUNDLE_PEM_MICROSERVICE_KEYSTORE_CERTIFICATE=./certificate.crt
#SPRING_SSL_BUNDLE_PEM_MICROSERVICE_TRUSTSTORE_CERTIFICATE=./certificate.crt

#SERVER_HTTP2_ENABLED=false
#SERVER_SSL_ENABLED=false

# DB-Server: Rechnername und Port im virtuellen Netzwerk
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres/gast
SPRING_DATASOURCE_USERNAME=gast
SPRING_DATASOURCE_PASSWORD=p
SPRING_FLYWAY_TABLESPACE=kundespace

# Keycloak fuer OAuth 2.0
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER-URI=http://keycloak:8080/realms/spring
APP_KEYCLOAK_HOST=keycloak
APP_KEYCLOAK_PORT=8080

# Mailserver: Rechnername und Port im virtuellen Netzwerk
SPRING_MAIL_HOST=fakesmtp
SPRING_MAIL_PORT=8025

# Tracing durch Zipkin
MANAGEMENT_ZIPKIN_TRACING_ENDPOINT=http://zipkin:9411/api/v2/spans

#SMTP_ACTIVATED=false
